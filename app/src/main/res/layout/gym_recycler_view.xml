<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="com.hlc.fng.data.source.local.MyData"/>
        <variable
            name="viewModel"
            type="com.hlc.fng.main.record.RecordFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rv_layout_cons"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bot_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <Button
            android:id="@+id/btn_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.btnAddImageClick()}"
            android:text="add"
            android:visibility="@{ viewModel.btnAddImage? View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="@+id/right_gl"
            app:layout_constraintStart_toStartOf="@+id/left_gl"
            app:layout_constraintTop_toTopOf="@+id/top_gl"
            app:layout_constraintBottom_toBottomOf="@+id/bot_gl"/>

        <ImageView
            android:id="@+id/iv_draw_gym"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@color/black"
            android:onClick="@{ ()->viewModel.drawClickEvent() }"
            app:layout_constraintBottom_toBottomOf="@+id/bot_gl"
            app:layout_constraintEnd_toEndOf="@+id/right_gl"
            app:layout_constraintStart_toStartOf="@+id/left_gl"
            app:layout_constraintTop_toTopOf="@+id/top_gl" />

        <TextView
            android:id="@+id/tv_g_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="333"
            app:layout_constraintStart_toStartOf="@+id/left_gl"
            app:layout_constraintTop_toBottomOf="@+id/iv_draw_gym"
            app:layout_constraintRight_toLeftOf="@+id/tv_floor"/>

        <TextView
            android:id="@+id/tv_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_draw_gym"
            app:layout_constraintLeft_toRightOf="@+id/tv_g_name"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>