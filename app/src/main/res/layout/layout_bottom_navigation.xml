<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.hlc.fng.main.MainActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/iv_home"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_record" />

            <ImageButton
                android:id="@+id/btn_bot_home"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:onClick="@{ ()->viewModel.botNavHomeClick() }"
                app:layout_constraintStart_toStartOf="@+id/iv_home"
                app:layout_constraintEnd_toEndOf="@+id/iv_home"
                app:layout_constraintTop_toTopOf="@+id/iv_home"
                app:layout_constraintBottom_toBottomOf="@+id/iv_home" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="bottom|center"
                android:text="home"
                app:layout_constraintStart_toStartOf="@+id/iv_home"
                app:layout_constraintEnd_toEndOf="@+id/iv_home"
                app:layout_constraintTop_toTopOf="@+id/iv_home"
                app:layout_constraintBottom_toBottomOf="@+id/iv_home" />

            <View
                android:id="@+id/iv_record"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/pale_violet_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_home"
                app:layout_constraintEnd_toStartOf="@+id/iv_graph" />

            <ImageButton
                android:id="@+id/btn_bot_record"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:onClick="@{ ()->viewModel.botNavRecordClick() }"
                app:layout_constraintStart_toStartOf="@+id/iv_record"
                app:layout_constraintEnd_toEndOf="@+id/iv_record"
                app:layout_constraintTop_toTopOf="@+id/iv_record"
                app:layout_constraintBottom_toBottomOf="@+id/iv_record" />

            <TextView
                android:id="@+id/tv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="bottom|center"
                android:text="record"
                app:layout_constraintStart_toStartOf="@+id/iv_record"
                app:layout_constraintEnd_toEndOf="@+id/iv_record"
                app:layout_constraintTop_toTopOf="@+id/iv_record"
                app:layout_constraintBottom_toBottomOf="@+id/iv_record" />

            <View
                android:id="@+id/iv_graph"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/red"
                app:layout_constraintStart_toEndOf="@+id/iv_record"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                android:id="@+id/btn_bot_graph"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:onClick="@{ ()->viewModel.botNavGraphClick() }"
                app:layout_constraintStart_toStartOf="@+id/iv_graph"
                app:layout_constraintEnd_toEndOf="@+id/iv_graph"
                app:layout_constraintTop_toTopOf="@+id/iv_graph"
                app:layout_constraintBottom_toBottomOf="@+id/iv_graph" />

            <TextView
                android:id="@+id/tv_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="bottom|center"
                android:text="graph"
                app:layout_constraintStart_toStartOf="@+id/iv_graph"
                app:layout_constraintEnd_toEndOf="@+id/iv_graph"
                app:layout_constraintTop_toTopOf="@+id/iv_graph"
                app:layout_constraintBottom_toBottomOf="@+id/iv_graph" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>